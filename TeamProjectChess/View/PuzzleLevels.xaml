<UserControl x:Class="TeamProjectChess.View.PuzzleLevels"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
    <Grid x:Name="PuzzleLevelsLayout" Background="AntiqueWhite">
        <Label x:Name="Instruction"  Margin="47,10,45,533" Width="508" Height="57" FontSize="30" Content="Выберите уровень сложности задач" RenderTransformOrigin="0.499,-0.308"/>
        <Button x:Name="EasyLevel" Width="400" Height="100" Margin="99,84,101,416" FontSize="40" Content="ЛЕГКИЙ" Click="EasyLevel_Click"/>
        <Button x:Name="MidLevel"  Width="400" Height="100" Margin="99,219,101,281" FontSize="40" Content="СРЕДНИЙ" Click="MidLevel_Click"/>
        <Button x:Name="DifficLevel" Width="400" Height="100" Margin="99,353,101,147" FontSize="40" Content="СЛОЖНЫЙ" Click="DifficLevel_Click"/>
        <Button x:Name="BackButton"  Width="150" Height="50" Margin="32,518,418,32" Content="НАЗАД" FontSize="20" Click="BackButton_Click" />
    </Grid>
</UserControl>
